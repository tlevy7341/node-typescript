generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  refreshToken String?
  id           Int      @id @default(autoincrement())
}

model PasswordReset {
  id         Int      @id @default(autoincrement())
  user_email String
  token      String   @unique
  createdAt  DateTime @default(now())
}
